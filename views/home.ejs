<html>

<% include ./partials/head %>

  <body class="text-center">
    <div class="container">
      <header
        class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-body border-bottom shadow-sm">
        <p class="h5 my-0 me-md-auto fw-normal">Company name</p>
        <% if (user) { %>
          <nav class="my-2 my-md-0 me-md-3">
            Welcome <a href="#" class="p-2 text-dark">
              <%- user %>
            </a>
            <a class="btn btn-primary" href="/users/logout">Logout</a>
          </nav>
          <% } else { %>
            <nav class="my-2 my-md-0 me-md-3">
              <nav class="my-2 my-md-0 me-md-3">
                <a class="btn btn-outline-primary" href="/users/login">Sign in</a>
                <a class="btn btn-outline-primary" href="/users/create-user">Sign up</a>
              </nav>
              <% } %>
      </header>
    </div>

    <h1>HOME PAGE</h1>

    <div class="container">

      <form method="POST" action="/users/home">
        <div class="input-group mb-3">
          <input name="search" type="text" class="form-control" placeholder="Search Gifhy" aria-label="search"
            aria-describedby="search">
          <button class="btn btn-primary" id="search" type="submit">Search</button>
        </div>
      </form>



      <% if (data) { %>
        <div class="row">
          <% data.data.forEach(function(item) { %>
            <div class="col-sm-6">
              <div class="card">
                <div class="card-body">
                  <div><img src="<%= item.images.fixed_height.url %>" /></div>
                  <a href="<% item.images.fixed_width.url %>" target="blank" class="btn btn-primary">Go somewhere</a>
                </div>
              </div>
            </div>
            <% })%>
        </div>
        <% } %>

        
        <% include ./partials/scripts %>
        

</html>